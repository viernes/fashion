<odoo>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="product_variant_automatic">
      <field name="name">product_variant_automatic list</field>
      <field name="model">product.variant.automatic</field>
      <field name="arch" type="xml">
        <form>
            <group>
                <group>
                    <field name="attribute_id"/>
                    <field name="data_start"/>
                    <field name="data_end"/>
                    <field name="type"/>
                </group>
                <group>
                    <field name="interval"/>
                    <field name="prefix"/>
                    <field name="suffix"/>
                    <field name="padding"/>
                    <field name="alphanumeric_padding"/>
                </group>
            </group>
            <footer>
                <button name="do_action" string="Create _Menu" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-default" special="cancel" />
            </footer>

        </form>
      </field>
    </record>


    <record id="product_variant_automatic_action" model="ir.actions.act_window">
        <field name="name">Views</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
        <field name="res_model">product.variant.automatic</field>
        <field name="view_id" ref="product_variant_automatic"/>
        <field name="help">Views allows you to personalize each view of Odoo. You can add new fields, move fields, rename them or delete the ones that you do not need.</field>
    </record>

</odoo>